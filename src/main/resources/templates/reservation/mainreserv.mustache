<!-- 예약 입력란 -->
<div class="booking-container">
    <form action="/reservation" method="get" class="d-flex align-items-center">
        <div class="me-3">
            <label for="checkin-date" class="form-label">체크인</label>
            <input type="date" id="checkin-date" name="checkin-date" class="form-control" placeholder="날짜 선택">
        </div>
        <div class="me-3">
            <label for="checkout-date" class="form-label">체크아웃</label>
            <input type="date" id="checkout-date" name= "checkout-date" class="form-control" placeholder="날짜 선택">
        </div>
        <div class="me-3">
            <label for="adults" class="form-label">성인</label>
            <select name="adults" id="adults" class="form-select">
                <option value="1">1명</option>
                <option value="2" selected>2명</option>
                <option value="3">3명</option>
            </select>
        </div>
        <div class="me-3">
            <label for="children" class="form-label">소인</label>
            <select name="children" id="children" class="form-select">
                <option value="0">선택</option>
                <option value="1">1명</option>
                <option value="2">2명</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">객실 검색</button>
    </form>
</div>